@model SignUpPasswordViewModel

@{
    ViewData["Title"] = "Set your secure password";
}


<form asp-controller="Auth" asp-action="HandleSignUpPassword" method="post" novalidate>
    <input type="hidden" asp-for="Email" value="@TempData["Email"]?.ToString()" />

    <div class="card auth-card">

        <div class="card-header auth-title">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="auth-card-body card-body">

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="form-errormessage">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <div class="form-group">
                <input class="form-input" asp-for="Password" />
                <span class="auth-validation" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input class="form-input" asp-for="ConfirmedPassword" />
                <span class="auth-validation" asp-validation-for="ConfirmedPassword"></span>
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>

        </div>

        <div class="card-footer additional-info center">
            <span>Already have an account?</span>
            <a asp-controller="Auth" asp-action="Login">Sign in</a>
        </div>

    </div>

</form>