@model SignUpPasswordViewModel

<form asp-controller="Auth" asp-action="HandleSignUpPassword" method="post" novalidate>
    <input type="hidden" asp-for="Email" />

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="form-errormessage">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="form-group">
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmedPassword" />
        <span asp-validation-for="ConfirmedPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>