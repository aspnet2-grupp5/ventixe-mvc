@model SignUpEmailViewModel

@{
    ViewData["Title"] = "Create account";
}

<form asp-controller="Auth" asp-action="HandleSignUpEmail" method="post" novalidate>

    <div class="card auth-card">

        <div class="card-header auth-title">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="auth-card-body card-body">

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="form-errormessage">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="form-group">
                <input class="form-input" asp-for="Email" />
                <span class="auth-validation" asp-validation-for="Email"></span>
            </div>

            <button type="submit" class="btn btn-primary">Continue</button>

        </div>

        <div class="card-footer additional-info center">
            <span>Already have an account?</span>
            <a asp-controller="Auth" asp-action="Login">Sign in</a>
        </div>

    </div>
</form>