@model SignUpEmailViewModel


@{
    ViewData["Title"] = "Signup";
}

<div>
    <h3>Sign up</h3>
</div>

<form asp-controller="Auth" asp-action="HandleSignUpEmail" method="post" novalidate>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="form-errormessage">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="form-group">
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <button type="submit" class="btn btn-primary">Continue</button>
</form>
<div class="additional-info"><p>Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in</a></p></div>