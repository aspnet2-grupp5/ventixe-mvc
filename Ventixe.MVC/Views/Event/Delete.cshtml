@using Ventixe.MVC.Models
@model CreateEventViewModel
@{
    ViewData["Title"] = "Delete Event";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this event?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.EventTitle</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.EventId" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
